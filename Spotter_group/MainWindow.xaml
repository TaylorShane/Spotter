<Window x:Class="Spotter_group.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotter_group"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
            <GradientStop Color="gray" Offset="0"/>
            <GradientStop Color="#666666" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Menu FontStyle="Normal" Height="20" VerticalAlignment="Top">
            <Menu.Background>
                <LinearGradientBrush>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Foreground="#FFE0E0E0" Header="User Profile" >
                <MenuItem Foreground="#FFE0E0E0" Header="New User" />
                <MenuItem Foreground="#FFE0E0E0" Header="Existing User"/>
            </MenuItem>
            <MenuItem Foreground="#FFE0E0E0" Header="Workouts"/>
            <MenuItem Foreground="#FFE0E0E0" Header="Nutrition"/>
            <MenuItem Foreground="#FFE0E0E0" Header="Calendar"/>
        </Menu>

        <StackPanel Margin="50" Width="auto">
            <Label Foreground="#FFE0E0E0">First Name</Label>
            <TextBox Name="firstNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
            <Label Foreground="#FFE0E0E0" Margin="0,10,0,0">Last Name</Label>
            <TextBox Name="lastNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
            <Label Foreground="#FFE0E0E0" Margin="0,10,0,0">Birthdate</Label>
            <DatePicker Name="dob" Width="100" HorizontalAlignment="Left"></DatePicker>
        </StackPanel>
        <Frame x:Name="frame" Content="Frame" HorizontalAlignment="Left" Height="256" VerticalAlignment="Top" Width="457" Margin="30,35,0,0"
               Background="Black" Panel.ZIndex="-1" BorderBrush="#009999" BorderThickness="5"/>
    </Grid>
</Window>
