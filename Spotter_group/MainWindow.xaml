<Window x:Class="Spotter_group.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotter_group"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
            <GradientStop Color="gray" Offset="0"/>
            <GradientStop Color="#666666" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Name="gridOutter">
        <Menu FontStyle="Normal" Height="20" VerticalAlignment="Top">
            <Menu.Background>
                <LinearGradientBrush>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="User Profile" >
                <MenuItem Header="New User" />
                <MenuItem Header="Existing User"/>
            </MenuItem>
            <MenuItem Header="Workouts"/>
            <MenuItem Header="Nutrition"/>
            <MenuItem Header="Calendar"/>
        </Menu>
        <UserControl Margin="70,50,70,50"
                     Background="#009999">
            <Grid Name="grid2"
                  Background="Black"
                  Margin="5">
                <StackPanel Margin="30" Width="auto">
                    <Label Foreground ="#FFE0E0E0">First Name</Label>
                    <TextBox Name="firstNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
                    <Label Foreground ="#FFE0E0E0">First Name</Label>
                    <TextBox Name="first2NameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
                    <Label Foreground ="#FFE0E0E0" Margin="0,10,0,0">Last Name</Label>
                    <TextBox Name="lastNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
                    <Label Foreground ="#FFE0E0E0" Margin="0,10,0,0">Birthdate</Label>
                    <DatePicker Name="dob" Width="100" HorizontalAlignment="Left"></DatePicker>
                    <Label>Shane label</Label>
                </StackPanel>
            </Grid>
        </UserControl>
    </Grid>
</Window>
