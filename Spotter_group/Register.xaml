<UserControl x:Class="Spotter_group.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotter_group"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="30" Width="auto">
            <StackPanel Orientation="Horizontal">
                <Label Foreground ="#FFE0E0E0">First Name</Label>
                <TextBox Name="tbFirstName" Width="100" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Foreground ="#FFE0E0E0" Margin="0,10,0,0">Last Name</Label>
                <TextBox Name="tbLastName" Width="100" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Foreground ="#FFE0E0E0" Margin="0,10,0,0">Birthdate</Label>
            <DatePicker Name="tbDOB" Width="100" HorizontalAlignment="Left"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Foreground="#FFE0E0E0">Username</Label>
                <TextBox x:Name="tbUserName" Width="100" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
