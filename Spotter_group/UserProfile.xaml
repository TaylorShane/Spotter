<UserControl x:Class="Spotter_group.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotter_group"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="50" Width="auto">
            <Label Foreground="#FFE0E0E0">First Name</Label>
            <TextBox Name="firstNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
            <Label Foreground="#FFE0E0E0" Margin="0,10,0,0">Last Name</Label>
            <TextBox Name="lastNameTextBox" Width="100" HorizontalAlignment="Left"></TextBox>
            <Label Foreground="#FFE0E0E0" Margin="0,10,0,0">Birthdate</Label>
            <DatePicker Name="dob" Width="100" HorizontalAlignment="Left"></DatePicker>
            <Image x:Name="image" Height="204" Margin="0,0,30,0" Source="images/thundercat.png" HorizontalAlignment="Right" Width="132"/>
        </StackPanel>
    </Grid>
</UserControl>
