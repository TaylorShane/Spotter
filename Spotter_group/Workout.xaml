<UserControl x:Class="Spotter_group.Workout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotter_group"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!-- Steve, you might want to insert content into stackpanels within the grid as I did on the Nutrition Page, Shane-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
       
        <StackPanel Margin="32,10,48,10" HorizontalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="3">
            <Label Grid.Column="4" Foreground="White" HorizontalAlignment="Center" FontSize="25">Workout Intensity</Label>
            <!--<TextBlock x:Name="txtBlock_CaloriesToConsume" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" ToolTip="2000"  Height="150"/>-->
        </StackPanel>

        
            <Label Foreground="Wheat" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">Label 1</Label>
            <Label Foreground="Wheat" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">Label 2</Label>
        
    </Grid>
</UserControl>
